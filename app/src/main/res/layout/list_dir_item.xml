<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/unit_8dp"
    android:paddingLeft="@dimen/unit_16dp"
    android:paddingRight="@dimen/unit_16dp"
    android:paddingTop="@dimen/unit_8dp">

    <ImageView
        android:layout_width="@dimen/meta_icon_width"
        android:layout_height="@dimen/meta_icon_height"
        android:src="@drawable/ic_folder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unit_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Android" />

        <com.xinxin.filebrowser.ui.LabelView
            android:id="@+id/child_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_8dp"
            app:label="@string/label_file"
            app:labelGap="@dimen/unit_8dp" />
    </LinearLayout>
</LinearLayout>