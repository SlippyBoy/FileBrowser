<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:paddingLeft="@dimen/unit_16dp"
    android:paddingRight="@dimen/unit_16dp"
    android:theme="@style/BottomBar">

    <TextView
        android:id="@+id/root_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="name" />

    <com.xinxin.filebrowser.ui.LabelView
        android:id="@+id/total_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        app:label="@string/label_choosed"
        app:labelGap="@dimen/unit_8dp"
        tools:text="1M" />
</android.support.v7.widget.Toolbar>